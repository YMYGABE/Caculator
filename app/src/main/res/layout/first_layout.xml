<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:columnCount="4"
    android:rowCount="5"
    android:background="#000000">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:gravity="right|bottom"
        android:text=""
        android:textSize="35sp"
        android:textColor="#fff"
        android:hint="0"
        android:textColorHint="#fff"
        android:layout_margin="13dp"/>

    <Button
        android:id="@+id/bt_AC"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape1"
        android:text="AC"
        android:textSize="24dp"
        android:layout_weight="1"
        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_evolution"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape1"
        android:text="√￣"
        android:textSize="24dp"
        android:layout_weight="1"
        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_sign"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape1"
        android:text="+/—"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_division"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonactivity"
        android:text="÷"
        android:textSize="24dp"
        android:textColor="#fff"
        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="7"
        android:textSize="24dp"
        android:textColor="#fff"
        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="8"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="9"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_mul"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonactivity"
        android:text="x"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="4"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="5"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="6"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_sub"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonactivity"
        android:text="-"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="1"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="2"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="3"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_sum"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonactivity"
        android:text="+"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_0"
        android:layout_width="0dp"
        android:layout_gravity="fill"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape4"
        android:layout_columnSpan="2"
        android:text="0"
        android:textColor="#fff"
        android:textSize="24dp"

        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_point"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape3"
        android:text="."
        android:textColor="#fff"
        android:textSize="24dp"
        android:layout_margin="13dp"/>
    <Button
        android:id="@+id/bt_equal"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonactivity"
        android:text="="
        android:textSize="24dp"
        android:textColor="#fff"
        android:layout_margin="13dp"/>

</GridLayout>
